<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<PackageId>EasyExpression.Core</PackageId>
		<VersionPrefix>0.1.0</VersionPrefix>
		<Authors>sanmu</Authors>
		<Description>A lightweight, extensible expression engine for .NET</Description>
		<PackageTags>expression;engine;scripting;dotnet</PackageTags>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/yang-sanmu/EasyExpression</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<Deterministic>true</Deterministic>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>
